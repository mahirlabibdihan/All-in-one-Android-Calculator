<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".Main">

    <TextView
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:gravity="center|end"
        android:hint="0"
        android:text=""
        android:maxLength="30"
        android:textColor="#FFFFFF"
        android:textColorHint="#969696"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:gravity="bottom|right"
        android:text=""
        android:padding="10dp"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:imeOptions="actionSearch"
        android:textColor="#969696"
        android:textSize="18dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal"
        android:weightSum="6">
        <Button
            android:id="@+id/buttonp1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:text="("
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />





        <Button
            android:id="@+id/buttonp2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:text=")"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />


        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:id="@+id/buttonfact"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="!"
            android:background="@drawable/background_btn1"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />
        <Button
            android:id="@+id/buttonmod"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:text="%"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/buttonsw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="►"
            android:background="@drawable/background_btn1"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />






        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="▲"
            android:id="@+id/buttonup"
            android:background="@drawable/background_btn1"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:background="#000"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/button7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="@drawable/background_btn2"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="@drawable/background_btn2"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="@drawable/background_btn2"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonadd"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="@drawable/background_btn1"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/buttonpow"
            android:text="xⁿ"
            android:background="@drawable/background_btn3"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="▼"
            android:id="@+id/buttondown"
            android:background="@drawable/background_btn1"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="@drawable/background_btn2"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="@drawable/background_btn2"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="@drawable/background_btn2"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />


        <Button
            android:id="@+id/buttonsub"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:background="@drawable/background_btn1"
            android:textColor="@color/WhiteText"
            android:textSize="25dp" />
        <Button
            android:id="@+id/buttonsin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sin"
            android:background="@drawable/background_btn1"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="20dp" />



        <Button
            android:id="@+id/buttonres"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AC"
            android:background="@drawable/background_btn1"
            android:textColor="@color/WhiteText"
            android:textSize="22dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.18"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/button1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:background="@drawable/background_btn2"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:background="@drawable/background_btn2"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:background="@drawable/background_btn2"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonmul"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="×"
                    android:background="@drawable/background_btn1"
                    android:textAllCaps="false"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttoncos"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="cos"
                    android:background="@drawable/background_btn1"
                    android:textAllCaps="false"
                    android:textColor="@color/WhiteText"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">
                <Button
                    android:id="@+id/button10"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."
                    android:background="@drawable/background_btn1"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/button0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:background="@drawable/background_btn2"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonC"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="⌫"
                    android:background="@drawable/background_btn1"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttondiv"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="÷"
                    android:background="@drawable/background_btn1"
                    android:textColor="@color/WhiteText"
                    android:textSize="25dp" />
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="tan"
                    android:id="@+id/buttontan"
                    android:textAllCaps="false"
                    android:background="@drawable/background_btn1"
                    android:textColor="@color/WhiteText"
                    android:textSize="20dp" />






            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".82"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/buttoneql"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="="
                android:background="@drawable/background_btn1"
                android:textColor="@color/WhiteText"
                android:textSize="35dp" />
            <Button
                android:id="@+id/buttonfrom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />
            <Button
                android:id="@+id/buttonto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />
            <Button
                android:id="@+id/buttonroot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />
            <Button
                android:id="@+id/buttonwp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>